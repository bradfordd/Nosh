<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nosh" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#3F51B5</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">#3F51B5</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor"> ?attr/colorOnPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        
    </style>

    <style name="Theme.Nosh.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nosh.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nosh.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Nosh.Headers">
        <item name="android:textAppearance"> @style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Theme.Nosh.SubText">
        <item name="android:textAppearance"> @style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>